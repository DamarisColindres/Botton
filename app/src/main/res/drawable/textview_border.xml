<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="#93D3EF"/>

    <!-- Bordes -->
    <stroke
        android:width="2dp"
        android:color="#205EB2"/>

    <!-- Esquinas redondeadas -->
    <corners android:radius="40dp"/>

    <!-- Padding interno -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
